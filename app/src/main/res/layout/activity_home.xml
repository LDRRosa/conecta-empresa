<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:fitsSystemWindows="true"
    >

    <!-- Barra de pesquisa -->
    <EditText
        android:id="@+id/etBusca"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Buscar empresas..."
        android:paddingHorizontal="16dp"
        android:drawablePadding="10dp"
        android:layout_margin="12dp"
        android:radius="8dp"
        android:background="@drawable/bg_search_field" android:drawableStart="@android:drawable/ic_menu_search"
        android:textColorHint="#AAAAAA"
        android:textColor="@color/black"
        android:inputType="text"
        android:imeOptions="actionSearch"

        />

    <!-- Conteúdo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Carrossel de banners -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="12dp" />

            <!-- Título seção -->
            <TextView
                android:id="@+id/tvEmpresasProximas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresas próximas"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_margin="12dp" />

            <!-- Lista de empresas (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEmpresasProximas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Navegação inferior -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"  android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"             app:cardElevation="8dp"                 app:cardBackgroundColor="#1A1A1A">       <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"          android:background="@android:color/transparent" app:itemIconTint="@color/bnv_item_color"
        app:itemTextColor="@color/bnv_item_color"
        app:menu="@menu/menu_bottom_nav" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
