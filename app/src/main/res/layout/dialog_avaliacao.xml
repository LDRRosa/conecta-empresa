<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliar Empresa"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sua opinião é importante"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/ratingBarDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:progressTint="#FFC107"
        android:rating="0"
        android:stepSize="1" />

    <EditText
        android:id="@+id/etDescricaoAvaliacao"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_modern"
        android:gravity="top|start"
        android:hint="Descreva sua experiência (opcional)"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="12dp"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/text_gray"
            android:text="Cancelar"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/btnEnviarAvaliacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/primary_yellow"
            android:text="Enviar"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
